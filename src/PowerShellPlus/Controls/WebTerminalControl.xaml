<UserControl x:Class="PowerShellPlus.Controls.WebTerminalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="#0c0c0c">
    
    <Grid>
        <!-- WebView2 终端 -->
        <wv2:WebView2 x:Name="TerminalWebView"
                      DefaultBackgroundColor="#0c0c0c"/>
        
        <!-- 加载中提示 -->
        <Border x:Name="LoadingOverlay"
                Background="#0c0c0c"
                Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock Text="⚡" 
                           FontSize="48" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="正在初始化终端..." 
                           Foreground="#888888"
                           FontSize="14"
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="2"
                             Margin="0,16,0,0"
                             Background="#1a1a1a"
                             Foreground="#10b981"/>
            </StackPanel>
        </Border>
        
        <!-- 错误提示 -->
        <Border x:Name="ErrorOverlay"
                Background="#0c0c0c"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        MaxWidth="400">
                <TextBlock Text="⚠️" 
                           FontSize="48" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock x:Name="ErrorMessage"
                           Text="终端初始化失败" 
                           Foreground="#ef4444"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
                <Button Content="重试"
                        Margin="0,20,0,0"
                        Padding="20,8"
                        Background="#10b981"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RetryButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


